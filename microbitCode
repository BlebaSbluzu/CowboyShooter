def on_button_pressed_a():
    global message
    message = "hi hayden"
    bluetooth.uart_write_line(message)
input.on_button_pressed(Button.A, on_button_pressed_a)

def on_uart_data_received():
    global msg
    msg = bluetooth.uart_read_until(serial.delimiters(Delimiters.NEW_LINE))
    basic.show_string(msg)
    bluetooth.uart_write_line("microbit got: " + msg)
bluetooth.on_uart_data_received(serial.delimiters(Delimiters.NEW_LINE),
    on_uart_data_received)

def on_button_pressed_b():
    basic.show_string(control.device_name())
input.on_button_pressed(Button.B, on_button_pressed_b)

msg = ""
message = ""
shot = False
bluetooth.start_uart_service()

def on_forever():
    global message
    # Note: The original string concatenation for Z and shot is kept for exact replication,
    # even though it may cause a slight formatting issue in the transmitted string.
    message = "" + str(input.acceleration(Dimension.X)) + "," + ("" + str(input.acceleration(Dimension.Y))) + "," + ("" + str(input.acceleration(Dimension.Z)) + "," + "") + "," + ("" + str(shot))
    bluetooth.uart_write_line(message)
    basic.pause(200)
basic.forever(on_forever)
